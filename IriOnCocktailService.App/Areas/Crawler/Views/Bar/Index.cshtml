@model IriOnCocktailService.App.Areas.Magician.Models.CollectionViewModel
@*Crawler*@
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<section>
    <div class="tbl-header">
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model.Bars)
                {
                    if (item.NotAvailable == false)
                    {
                        <tr>
                            <td>
                                <div class="media">
                                    <img height="100" width="100" class="d-flex align-self-start mr-3" src="@Html.DisplayFor(modelItem => item.PictureURL)" alt="Generic placeholder image">
                                    <div class="media-body">
                                        <h5 class="mt-0">
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                        </h5>
                                        @for (int i = 0; i < @item.Rating; i++)
                                        {
                                            <img src="~/lib/images/christmas_star.png" alt="BackToList" width="20">
                                        }

                                        <div class="d-flex justify-content-end"><span class="font-weight-bold">Address: </span>@Html.DisplayFor(modelItem => item.Address)</div>
                                        <div class="d-flex justify-content-end"><span class="font-weight-bold">Phone number: </span>@Html.DisplayFor(modelItem => item.PhoneNumber)</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                            </td>
                            <td>
                                <a id="bar-buttonE" asp-action="Rating" asp-route-id="@item.Id" target="_blank" rel="nofollow noopener">
                                    <span data-title="Rate it!">
                                        <img src="~/lib/images/RateIt.png" alt="RateIt" width="20"> Rate it!
                                        <img src="~/lib/images/RateIt.png" alt="RateIt" width="20">
                                    </span>
                                </a>
                                <p></p>

                                <a id="bar-buttonD" asp-action="Details" asp-route-id="@item.Id" target="_blank" rel="nofollow noopener">
                                    <span data-title="Read More Info">
                                        <img src="~/lib/images/Magic-Hat-Transparent.png" alt="RateIt" width="25"> Read More Info!
                                        <img src="~/lib/images/Magic-Hat-Transparent.png" alt="RateIt" width="25">
                                    </span>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>





