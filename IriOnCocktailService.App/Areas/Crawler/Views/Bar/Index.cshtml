<div class="row">
    @{ var counter = 5; }
    @foreach (var item in Model.Bars)
    {
        if (item.NotAvailable == false)
        {
            <div class="col-sm-3">
                <div class="card-deck">
                    <div class="card bg-black-only">
                        <img data-toggle="tooltip" data-placement="top" title="@item.Name" class="card-img-top" src="@Html.DisplayFor(modelItem => item.PictureURL)" alt="Bar Pic">
                        <div class="card-body">
                            <h5 class="card-title text-center">
                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                <br />
                                @for (int i = 0; i < @item.Rating; i++)
                                {
                                    <img src="~/lib/images/christmas_star.png" alt="Star" width="20">
                                }
                            </h5>
                            <p class="card-text text-center">
                                <span class="font-weight-bold text-white">Address: </span>
                                <br />
                                <span>@Html.DisplayFor(modelItem => item.Address)</span>
                                <br />
                                <br />
                                <span class="font-weight-bold text-white">Phone number: </span>
                                <br />
                                <span>@Html.DisplayFor(modelItem => item.PhoneNumber)</span>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a id="bar-buttonE" asp-action="Rating" asp-route-id="@item.Id" target="_blank" rel="nofollow noopener">
                                <span data-title="Rate it!">
                                    <img src="~/lib/images/RateIt.png" alt="RateIt" width="20"> Rate it!
                                    <img src="~/lib/images/RateIt.png" alt="RateIt" width="20">
                                </span>
                            </a>
                            <a id="bar-buttonE" asp-action="Details" asp-route-id="@item.Id" target="_blank" rel="nofollow noopener">
                                <span data-title="Read More Info">
                                    <img src="~/lib/images/Magic-Hat-Transparent.png" alt="RateIt" width="25"> Read More Info!
                                    <img src="~/lib/images/Magic-Hat-Transparent.png" alt="RateIt" width="25">
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <p></p>
            </div>
            if (counter % 4 == 0)
            {
            @:</div><div class="row">
                counter = 0;
            }
            counter++;

        }
    }
</div>




