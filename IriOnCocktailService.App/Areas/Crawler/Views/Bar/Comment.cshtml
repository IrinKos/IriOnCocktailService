@model IriOnCocktailService.App.Areas.Crawler.Models.CommentViewModel

@{
    ViewData["Title"] = "Comment";
}

<div class="bg-black" style="width: 60%; margin-left: 225px; margin-top: 20px;">
    <div>
        <p class="login-text">
            <span>
                <img src="~/lib/images/BookComment.png" alt="CreateBar" width="50" style="border-radius: 50%;background-color: white">
            </span>
        </p>
        <form asp-action="Comment">
            <h3>Create Comment!</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-left: 2%; margin-right: 2%">
                @*<label asp-for="Comment" class="control-label"></label>*@
                @*<input asp-for="Comment" class="form-control" />*@
                <textarea asp-for="Comment" class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Leave your comment here.."></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="bar-buttonE border-0">
                    <span data-title="Save!">
                        <img src="~/lib/images/BookComment.png" alt="CreateBar" width="30"> Save!
                        <img src="~/lib/images/BookComment.png" alt="CreateBar" width="30">
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>
