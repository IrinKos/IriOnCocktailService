@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="bg-black" style="width: 60%; margin-left: 225px; margin-top: 50px;">
    <p class="login-text">
    <p class="login-text">
        <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
        </span>
    </p>
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Username" id="my-login" class="form-control" placeholder="Username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" id="my-login" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" id="my-login" class="form-control" placeholder="Comfirm passwor" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="bar-buttonE border-0 mt-4 mb-3">
                <span data-title="Register!">
                    <img src="~/lib/images/Magic-Hat-Transparent.png" alt="RateIt" width="25"> Register!
                    <img src="~/lib/images/Magic-Hat-Transparent.png" alt="RateIt" width="25">
                </span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
