@model IriOnCocktailService.App.Areas.Magician.Models.CollectionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<section>
    <div class="tbl-header">
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model.Cocktails)
                {
                    if (item.NotAvailable == false)
                    {
                        <tr>
                            <td>
                                <div class="media">
                                    <img height="100" width="100" class="d-flex align-self-start mr-3" src="@Html.DisplayFor(modelItem => item.PictureURL)" alt="Generic placeholder image">
                                    <div class="media-body">
                                        <h5 class="mt-0">
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                        </h5>
                                        @for (int i = 0; i < @item.Rating; i++)
                                        {
                                            <img src="~/lib/images/christmas_star.png" alt="BackToList" width="20">
                                        }

                                        @for (int i = 0; i < Model.Cocktails.First().Ingredients.Count; i++)
                                        {

                                        <div><strong>Ingredients: </strong>@Html.DisplayFor(modelItem => item.Ingredients[i].Name)</div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>
