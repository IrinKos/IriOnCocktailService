@model CollectionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bars.First().BarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bars.First().BarAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bars.First().BarPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bars.First().BarPicUrl)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.NotAvailable)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bars)
        {
            if (item.BarNotAvailable == false)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BarName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BarAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BarPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BarPicUrl)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.NotAvailable)
                        </td>*@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BarId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BarId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.BarId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
