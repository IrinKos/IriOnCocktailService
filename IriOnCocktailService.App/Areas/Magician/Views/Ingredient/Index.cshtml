@model IEnumerable<IriOnCocktailService.App.Areas.Magician.Models.CreateIngredientViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table bg-white text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitType)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitType)
                </td>
                <td>
                    
                        <a class="myButtonEdit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="myButtonDelete" asp-action="Delete" asp-route-id="@item.Id">Delete!</a>
                </td>
            </tr>
        }
    </tbody>
</table>
