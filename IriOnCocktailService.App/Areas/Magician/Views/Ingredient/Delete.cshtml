@model IriOnCocktailService.App.Areas.Magician.Models.CreateIngredientViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="bg-black" style="width: 60%; margin-left: 225px; margin-top: 50px;">
    <p class="login-text">
        <span>
            <img src="~/lib/images/delete.png" alt="CreateBar" width="50" style="border-radius: 50%;background-color: white;">
        </span>
    </p>
    <h3>Are you sure you want to delete <b class="text-danger font-italic">@Html.DisplayFor(model => model.Name)</b>?</h3>
    <div>
        <br />
        <form asp-action="Delete">
            <button type="submit" class="bar-buttonD border-0">
                <span data-title="Delete!">
                    <img src="~/lib/images/RedFlask.png" alt="CreateBar" width="22"> Delete!
                    <img src="~/lib/images/RedFlask.png" alt="CreateBar" width="22">
                </span>
            </button>
            <div>
                <a asp-action="Index" class="bar-buttonD mt-3">
                    <span data-title="Back to List!">
                        <img src="~/lib/images/backArrow.png" alt="CreateBar" width="22"> Back to List!
                        <img src="~/lib/images/backArrow.png" alt="CreateBar" width="22">
                    </span>
                </a>
            </div>
        </form>
    </div>
</div>





