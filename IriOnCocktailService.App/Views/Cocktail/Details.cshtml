<div class="container">
    <div id="container" style="width: 100%">
        <div class="product-details">
            <h1>@Model.Name</h1>
            <div>
                @for (int i = 0; i < @Model.Rating; i++)
                {
                    <img src="~/lib/images/christmas_star.png" alt="Star" width="20">
                }
            </div>
            <br />
            <br />
            <br />
            @if (Model.Motto == null)
            {
                <p class="information pb-5">No Motto available</p>
            }
            else
            {
                <p class="information pb-5">"@Model.Motto"</p>
            }
            @*<a id="show-comments" class="m-md-auto pt-5 bar-buttonD" asp-action="GetComments" asp-route-id="@Model.Id">
