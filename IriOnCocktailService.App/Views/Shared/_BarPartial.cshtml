@model IndexViewModel
@*Crawler*@
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    @foreach (var item in Model.Bars)
    {
        if (item.NotAvailable == false)
        {
            <div class="col-8 col-sm-6 mb-5">
                <div class="card-deck" style="height: 300px;">
                    <div class="card bg-black-only">
                        <img data-toggle="tooltip" data-placement="top" title="@item.Name" class="card-img-top" src="@Html.DisplayFor(modelItem => item.PictureURL)" alt="Bar Pic">
                        <div class="card-body">
                            <h5 class="card-title text-center">
                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                <br />
                                @for (int i = 0; i < @item.Rating; i++)
                                {
                                    <img src="~/lib/images/christmas_star.png" alt="Star" width="20">
                                }
                            </h5>
                            <p class="card-text text-center">
                                <span class="font-weight-bold text-white">Address: </span>
                                <br />
                                <span>@Html.DisplayFor(modelItem => item.Address)</span>
                            </p>
                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>
                <p></p>
            </div>
        }
    }
</div>
